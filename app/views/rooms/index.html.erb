      <div class="card-trip">
        <%= image_tag(room_picture) %>
        <div class="card-trip-infos">
          <div>
            <h2>Chambre pour <%=room.capacity%> personnes</h2>
            <p><%= room.hotel.name %></p>
          </div>
          <h2 class="card-trip-pricing"><%= room.price_per_night %>â‚¬ / nuit</h2>
        </div>
      </div>
    <% end %>
